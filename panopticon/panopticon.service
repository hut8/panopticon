[Unit]
Description=Panopticon - RFID Door Access Web Server
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=panopticon
Group=panopticon
StateDirectory=panopticon
ExecStart=/usr/local/bin/panopticon
Environment=RUST_LOG=panopticon=info
EnvironmentFile=/etc/panopticon/env
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
